<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                style="@style/CaptureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Test Report Number"
                />

            <TextView
                style="@style/CaptureMandatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <EditText
            android:layout_width="0dp"
            android:id="@+id/soilTestRptNo"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:layout_weight="6"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD SOIL TEST REPORT"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_gravity="right|end"
        android:id="@+id/addNewSoilReport"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FETCH SOIL TEST REPORT"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_gravity="right|end"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:id="@+id/fetchDetails"
        android:background="@android:color/transparent"/>

</LinearLayout>