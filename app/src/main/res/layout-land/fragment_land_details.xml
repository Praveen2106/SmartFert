<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Survey Number"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/surveyNo"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ownership"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Spinner
                android:layout_width="0dp"
                android:id="@+id/ownership"
                android:paddingTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:entries="@array/ownership"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cropped Area (In Hectares)"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/landArea"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/district"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zonal"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/zonal"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Village"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/village"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Crop"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/currentCrop"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Sown Date"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Button
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:id="@+id/cropSownDate"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Harvest Date"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Button
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:id="@+id/cropHarvestDate"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    style="@style/CaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Crop"
                    />

                <TextView
                    style="@style/CaptureMandatory"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="0dp"
                android:id="@+id/previousCrop"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="6"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>